
int main()
{

	char arr1[] = "welcome to chengdu !!!!!";
	char arr2[] = "************************";
	int left = 0;
  
	//int right = sizeof(arr1)/sizeof(arr1[0])-2;
	int right = strlen(arr1)-1;//求字符串长度，不包含-/0-的
	while(left <= right)
	{
	  
    arr2[left] = arr1[left];
	   arr2[right] = arr1[right];
	   printf("%s\n",arr2);
  	Sleep(500);//休息1000毫秒
	   system("cls");//执行系统命令的一个函数-cls-清空屏幕
	   left++;
	   right--;
     
	}
	printf("%s\n",arr2);
  return 0;
}
